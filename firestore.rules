rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Leaderboard - allow authenticated users to read all, write their own
    match /leaderboard/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Multiplayer games - allow authenticated users to read/write games they're part of
    match /games/{gameId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.player1Id ||
        request.auth.uid == resource.data.player2Id
      );
    }
  }
}
